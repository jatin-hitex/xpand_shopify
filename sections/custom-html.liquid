<script
  type="application/json"
  data-section-type="custom-html"
  data-section-id="{{ section.id }}"
>
</script>

{% comment %} Section specific CSS {% endcomment %}
{% style %}
  {%
    render 'css-loop',
    css: section.settings.custom_css,
    id: section.id,
  %}
{% endstyle %}

{%- assign title = section.settings.title | escape -%}

<section class="section {{ section.settings.css_class }}">
  <div class="container">
    <div
      class="
        one-whole
        column
        custom-html-container
      "
    >
    {% if title != blank %}
      <div class="one-whole column">
        <h2 class="title center">
          {{ title | strip_html }}
        </h2>
        <div class="feature-divider"></div>
      </div>
    {% endif %}
      {% if section.settings.custom_html != blank %}
        <div class="rte">
          {{ section.settings.custom_html }}
        </div>
      {% else %}
        <p class="center">
          {{ 'homepage.onboarding.no_content' | t }}
        </p>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Custom HTML",
  "class": "shopify-section--custom-html",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Custom Html Heading"
    },
    {
      "type": "textarea",
      "id": "custom_html",
      "label": "Custom html"
    },
    {
      "type": "header",
      "content": "Advanced"
    },
    {
      "type": "paragraph",
      "content": "[Learn more](https://help.outofthesandbox.com/hc/en-us/articles/360022329373)"
    },
    {
      "type": "text",
      "id": "css_class",
      "label": "CSS Class"
    },
    {
      "type": "textarea",
      "id": "custom_css",
      "label": "Custom CSS"
    }
  ],
  "presets": [{
    "name": "Custom HTML",
    "category": "Content"
  }]
}

{% endschema %}