<style>
{% if request.path contains 'social-impact' %}

.three_column_icons_group {
  background: rgba(241,242,242,1);
  padding: 40px 0;
}
.three_column_icons_group .container {
    justify-content: center;
}

.cm_listing_header > h1 {
    font-family:'neuzeit_grotesk_regular';
  font-size: 48px;
  color: rgb(0, 0, 0);
  font-weight: bold;
  text-align: center;
}

.cm_col_listing_wrapper > div.cm-block-item {
  width: 33.33%;
  float: left;
  text-align: center;
}

.cm_col_listing_wrapper {
  overflow: hidden;
  margin-top: 0;
}

.cm-block-image img {
  width: 150px;
}

h3.cm-block-title {
    font-family:'neuzeit_grotesk_regular';
  font-weight: 700;
  font-style: normal;
  font-size: 20px;
  color: rgb(0, 0, 0);
  margin: 10px 0;
}

.cm-block-item-inner {
  max-width: 250px;
  margin: 0 auto;
}

.cm_social_impact_page .container {
  max-width: 970px;
  padding:0 20px;
}

.cm-block-content {
    font-family:'neuzeit_grotesk_light';
  font-weight: 400;
  font-style: normal;
  font-size: 16px;
  color: rgb(0, 0, 0);
}

.cm-block-button > a {
    font-family:'neuzeit_grotesk_light';
  font-weight: 400;
  font-style: normal;
  font-size: 16px;
  background: rgba(253,214,0,1);
  box-shadow: none;
  text-shadow: none;
  color: #000000;
  display: block;
  line-height: 40px;
  width: 210px;
  margin: 0 auto;
}

.cm-block-button {
  margin: 20px 0;
  text-align: center;
}

.cm_col_listing_wrapper .cm_col_listing_wrapper {
  margin-top: 40px;
}

.cm-block-content a {
  color: inherit;
  text-decoration: underline;
}

.cm-block-button > a,
.cm-block-button > a span {
  font-weight: bold;
  color: #000;
}

.cm_col_listing_wrapper > div.cm-block-item {
  padding: 0 15px;
}

.cm-block-item-inner {
  max-width: 350px;
}

.cm-block-button > a:hover {
  background: rgba(228,184,0,1);
}

.cm-youtube-video {
  max-width: 790px;
  text-align: center;
  margin: 40px auto 30px;
}

.cm-youtube-video iframe {
  height: 446px;
}

.cm-youtube-video-section h3 {
  font-weight: bold;
  line-height: 35px;
  font-family:'neuzeit_grotesk_regular';
  font-size: 22px;
  color: rgb(0, 0, 0);
  text-align: center;
  width: 550px;
  margin: 0 auto;
}
@media screen and (max-width: 767px) {
    .cm_listing_header > h1 {
        font-size: 30px;
    line-height: 40px;
    }
    .cm_col_listing_wrapper > div.cm-block-item {
        width: 100%;
    }
    .cm-youtube-video,
    .cm-youtube-video-section h3{
        max-width: 100%;
    }
    .cm-youtube-video-section {
        padding: 0 15px;
    }
    .cm-youtube-video-section h3{
        width: 100%;
        font-size: 18px;
    line-height: 24px;
    }
    .cm-youtube-video iframe{
        height: 100%!important;
    }
    
}

{% endif %}
</style>
<div class="three_column_icons_group">
  <div class="container">
    <div class="three_column_icons_group_wrapper">
      <div class="cm_listing_header">
        <h1>{{ section.settings.listing_title }}</h1>
      </div>
      <div class="cm_col_listing_wrapper">
        <div class="cm_col_listing_wrapper">
          {% for block in section.blocks %}
          <div class="cm-block-item">
            <div class="cm-block-item-inner">
              <div class="cm-block-image">
                <img src="{{ block.settings.image|img_url:'master' }}" alt="{{ block.settings.title }}"/>
              </div>
              <h3 class="cm-block-title">{{ block.settings.title }}</h3>
              <div class="cm-block-content">
                {{ block.settings.content }}
              </div>
              <div class="cm-block-button">
                <a href="{{ block.settings.link }}"><span>{{ block.settings.btn_txt }}  ‚ü∂</span></a>
              </div>
            </div>
          </div>
          {% endfor %}
        </div>
      </div>

      <div class="cm-youtube-video-section">
        <div class="cm-youtube-video">
          {{ section.settings.youtube_embeded_path }}
        </div>
        <h3>{{ section.settings.bottom_header }}</h3>
      </div>

    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Three Column Icons Group",
    "settings": [
		{
           "type":      "text",
           "id":        "listing_title",
           "label":     "Listing Title",
           "placeholder": "Title"
        },
		{
           "type":      "textarea",
           "id":        "youtube_embeded_path",
           "label":     "YouTube embeded",
           "placeholder": "Embeded Path"
        },
		{
           "type":      "text",
           "id":        "bottom_header",
           "label":     "Bottom Header",
           "placeholder": "Bottom Header"
        }
	],
    "max_blocks": 3,
    "blocks": [
      {
        "type": "col_item",
        "name": "Column Item",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Title"
          },
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "richtext",
            "id": "content",
            "label": "Content"
          },
		  {
            "type": "text",
            "id": "btn_txt",
            "label": "Button Text"
          },
          {
            "type": "url",
            "id": "link",
            "label": "Link"
          }
        ]
      }
    ],
    "presets":[
        {
            "name": "Three Column Icons Group"
        }
    ]

  }
{% endschema %}

{% stylesheet %}
{% endstylesheet %}

{% javascript %}
{% endjavascript %}
