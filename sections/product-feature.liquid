<section class="section product-feature" style="padding-top: {{ section.settings.sec_top | append: 'px' }}; padding-bottom: {{ section.settings.sec_bottom | append: 'px' }}">
  <div class="container">
    <ul class="columns">
      {% for block in section.blocks %}
        <li class="column">
          <img
            data-src="{{ block.settings.icon | img_url: '40x' }}"
            class="lazyload"
            alt="{{ block.settings.icon.alt }}"
            data-src="{{ block.settings.icon | img_url }}" />
          <p class="text-mobile" style="color: {{ section.settings.text_color  }};">{{ block.settings.text_mobile | strip_html }}</p>
          <p class="text-desktop" style="color: {{ section.settings.text_color  }};">{{ block.settings.text }}</p>
        </li>
      {% endfor %}
    </ul>
  </div>
</section>

{% schema %}
  {
    "name": "Product Feature",
    "settings": [
      {
        "type": "color",
        "id": "text_color",
        "label": "Text Color"
      }, {
        "type": "header",
        "content": "Spacing"
      }, {
        "type": "range",
        "id": "sec_top",
        "step": 5,
        "min": 0,
        "max": 80,
        "unit": "px",
        "default": 0,
        "label": "Padding top"
      }, {
        "type": "range",
        "id": "sec_bottom",
        "step": 5,
        "min": 0,
        "max": 80,
        "unit": "px",
        "default": 0,
        "label": "Padding bottom"
      }
    ],
    "max_blocks": 3,
    "blocks": [
      {
        "type": "item",
        "name": "Item",
        "settings": [
          {
            "type": "text",
            "id": "text",
            "label": "Text"
          }, {
            "type": "text",
            "id": "text_mobile",
            "label": "Text (Mobile)"
          }, {
            "type": "image_picker",
            "id": "icon",
            "label": "Icon"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Product Feature",
        "category": "Text"
      }
    ]
  }
{% endschema %}