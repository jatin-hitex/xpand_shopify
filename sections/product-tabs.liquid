              {% when 'specs' %}
              <div
                class="body-content {% if forloop.index == 1 %}active-tab-content{% endif %}"
                data-id="tab-{{forloop.index}}"
                data-type="{{ block.type }}">
                <div class="section">
                  <div class="columns">
                    {% if product_prefix == 'flat' %}
                      {% capture specsTitle %}flat_title{% endcapture %}
                      {% capture specsDesc %}flat_description{% endcapture %}
                      {% capture specsImg %}flat_image{% endcapture %}
                      {% capture specContentFullWidth %}flat_full_width{% endcapture %}
                    {% endif %}
                    {% if product_prefix == 'round' %}
                      {% capture specsTitle %}round_title{% endcapture %}
                      {% capture specsDesc %}round_description{% endcapture %}
                      {% capture specsImg %}round_image{% endcapture %}
                      {% capture specContentFullWidth %}round_full_width{% endcapture %}
                    {% endif %}
                    {% if template_prefix == 'primary' or template_prefix == 'primary-alternate' %}
                  {% capture specsTitle %}accessories_title{% endcapture %}
                  {% capture specsDesc %}accessories_description{% endcapture %}
                  {% capture specsImg %}accessories_image{% endcapture %}
                  {% capture specContentFullWidth %}accessories_full_width{% endcapture %}
                    
                  {% endif %}
                  {% unless block.settings[specsTitle] == blank or block.settings[specsDesc] == blank %}       
                <div class="column is-4 text {% if block.settings[specContentFullWidth] %} full-width-layout{% endif %}">
                      {% if block.settings[specsTitle] != blank %}
                        <h3>{{ block.settings[specsTitle] }}</h3>
                      {% endif %}
                      {% if block.settings[specsDesc] != blank %}
                        {{ block.settings[specsDesc] }}{% endif %}
                    </div>
                  {% endunless %}
                  {% unless block.settings[specsImg] == blank %}
                  <div class="column is-8 media  {% if block.settings[specContentFullWidth] %} full-width-layout{% endif %} {% if block.settings[specsTitle] == blank and block.settings[specsDesc] == blank %} full-width{% endif %}">
                      {% if block.settings[specsImg] != blank %}
                        {{ block.settings[specsImg] | img_url: 'master' | img_tag }}
                      {% endif %}
                    </div>
                  {% endunless %}
                  </div>
                </div>
              </div>

              {% when 'reviews' %}
              <div
                class="body-content {% if forloop.index == 1 %}active-tab-content{% endif %}"
                data-id="tab-{{forloop.index}}"
                data-type="{{ block.type }}">
                <div class="section">
                  <!--Start Stamped.io Auto Installation-->
                  <div
                    id="stamped-main-widget"
                    class="stamped-main-widget"
                    data-widget-style="standard"
                    data-photo-summary="false"
                    data-product-id="{{ product.id }}"
                    data-name="{{ product.title | escape }}"
                    data-url="{{ shop.url }}{{ product.url }}"
                    data-image-url="{{ product.featured_image | product_img_url: "large" |replace: '?', '%3F' | replace: '&','%26'}}"
                    data-description="{{ product.description | escape }}"
                    data-product-sku="{{product.handle}}">{{ product.metafields.stamped.reviews }}</div>
                  <!--End Stamped.io Auto Installation-->
                </div>
              </div>

              {% when 'installation' %}
              <div
                class="body-content {% if forloop.index == 1 %}active-tab-content{% endif %}"
                data-id="tab-{{forloop.index}}"
                data-type="{{ block.type }}">
                <div class="section">
                  {% for i in (1..2) %}
                    {% if product_prefix == 'flat' %}
                      {% capture installVideoyoutube %}flat_iframe_video_{{ i }}{% endcapture %}
                      {% capture installVideoHtml %}flat_video{{ i }}_url{% endcapture %}
                    {% endif %}
                    {% if product_prefix == 'round' %}
                      {% capture installVideoyoutube %}round_iframe_video_{{ i }}{% endcapture %}
                      {% capture installVideoHtml %}round_video{{ i }}_url{% endcapture %}
                    {% endif %}
                    {% if template_prefix contains 'primary' %}
                      {% capture installVideoyoutube %}accessories_iframe_video_{{ i }}{% endcapture %}
                      {% capture installVideoHtml %}accessories_video{{ i }}_url{% endcapture %}
                    {% endif %}

                
                    {% comment %} Checks there is an HTML5 video {% endcomment %}
                    {% if block.settings[installVideoHtml] != blank %}
                      {{ block.settings[installVideoHtml] | video_tag: image_size: 'master', autoplay: true, muted: true, controls: false, loop: true }}
                          {% comment %} Checks there is an iframe video (YouTube or Vimeo) {% endcomment %}
                    {% elsif block.settings[installVideoyoutube] != blank %}
                      {% if block.settings[installVideoyoutube].type == 'vimeo' %}
                        <iframe src="https://player.vimeo.com/video/{{ block.settings[installVideoyoutube].id }}?loop=false&amp;byline=false&amp;portrait=false&amp;title=false&amp;speed=true&amp;transparent=0&amp;gesture=media" allowfullscreen allowtransparency allow="autoplay"></iframe> 

                      {% elsif block.settings[installVideoyoutube].type == 'youtube' %}
                        <iframe src="https://www.youtube.com/embed/{{ block.settings[installVideoyoutube].id }}?origin=https://plyr.io&amp;iv_load_policy=3&amp;modestbranding=1&amp;playsinline=1&amp;showinfo=0&amp;rel=0&amp;enablejsapi=1" allowfullscreen allowtransparency allow="autoplay"></iframe> 
                      {% endif %}                    
                    {% endif %}


                {% endfor %}
              </div>
            </div>
            {%  when 'size_chart' %}
              <div
                class="body-content {% if forloop.index == 1 %}active-tab-content{% endif %}"
                data-id="tab-{{forloop.index}}"
                data-type="{{ block.type }}">
                {% capture sizeChartHeadingTop %}accessories_sizechart_top_title{% endcapture %}
                {% capture sizeChartDescTop %}accessories_sizechart_top_description{% endcapture %}
                <div class="section size-chart-content">
                  {% unless block.settings[sizeChartHeadingTop] == blank %}<h2>{{ block.settings[sizeChartHeadingTop] }}</h2>{% endunless %}
                  {% unless block.settings[sizeChartDescTop] == blank %}{{ block.settings[sizeChartDescTop] }}{% endunless %}
                  {% assign rowspanCounter = 1 %}
                  {% for i in (1..3) %}
                    {% capture tableType %}accessories_sizechart_table_{{ i }}_type{% endcapture %}
                    {% capture tableHeading %}accessories_sizechart_table_{{ i }}_heading{% endcapture %}
                      {% unless block.settings[accessories_sizechart_table_] == blank and block.settings[tableHeading] == blank %}
                      <table class="table">
                        <tbody>
                          <tr>
                            <td rowspan="20" class="gender">{{ block.settings[tableType] }}</td>
                            {%  assign tableHeadContent = block.settings[tableHeading] | split: ','%}
                            {% for item in  tableHeadContent %}
                              <td class="size-name">{{ item }}</td>
                            {% endfor %}
                          </tr> 
                          {% for j in (1..5) %}
                            {% capture tableContent %}accessories_sizechart_table_{{ i }}_row_{{ j }}_content{% endcapture %}
                            {%  assign tableData = block.settings[tableContent] | split: ','%} 
                            <tr>
                              {% for itemData in  tableData %}
                                <td>{{ itemData }}</td>
                              {% endfor %}
                            </tr>
                          {% endfor %}
                        </tbody>
                      </table>
                      {% endunless %}
                {% endfor %}
                {% capture sizeChartContent %}accessories_sizechart_content{% endcapture %}
                {% capture sizeChartContentImg %}accessories_sizechart_content_img{% endcapture %}
                  {% unless block.settings[sizeChartContent] == blank %}<div class="size-chart-content-area text-center">{{ block.settings[sizeChartContent] }}</div>{% endunless %}
                  {% unless block.settings[sizeChartContentImg] == blank %}                  
                  {{ block.settings[sizeChartContentImg] | img_url: 'master' | img_tag }}
                  {% endunless %}
              </div>
            </div>
          {% endcase %}
        {% endfor %}


      </div>
    </section>
  </div>
{% endif %}
