{% assign product_prefix = product.type | split: ' ' | first | downcase %}
{% assign template_prefix = template.suffix %}
{% if section.blocks.size > 0 %}
  <div class="shopify-section-product-tab">
    <section class="product-tab">
      <div class="tab-container">
        <div class="tab-head">
          <div class="section">
            <ul class="columns is-mobile">
              {% for block in section.blocks %}
                {% assign tabHeading = block.settings.name %}
                {% if tabHeading != blank %}
                  <li id="tab-{{ forloop.index}}" class="column {% if forloop.index == 1 %}active{% endif %}">{{ tabHeading }}</li>
                {% endif %}
              {% endfor %}
            </ul>
          </div>
        </div>
        <div class="tab-body">
          {% for block in section.blocks %}
            {% case block.type %}

              {% when 'about' %}
              {% if product_prefix == 'flat' %}
                {% assign blockTitle = block.settings.title %}
                {% assign topVideo = block.settings.flat_top_video_url %}
                {% assign blockDesc = block.settings.block_desc %}
              {% endif %}
              {% if product_prefix == 'round' %}
                {% assign blockTitle = block.settings.title %}
                {% assign topVideo = block.settings.round_top_video_url %}
                {% assign blockDesc = block.settings.block_desc %}
              {% endif %}
              {% if template_prefix == 'primary' or template_prefix == 'primary-alternate' %}
              {% assign blockTitle = block.settings.title %}
              {% assign topVideo = block.settings.accessories_top_video_url %}
              {% assign blockDesc = block.settings.block_desc %}
              
            {% endif %}

              <div
                class="body-content {% if forloop.index == 1 %}active-tab-content{% endif %}"
                data-id="tab-{{forloop.index}}"
                data-type="{{ block.type }}">
              <div class="section {% if template_prefix == 'primary' or template_prefix == 'primary-alternate' %} accessories-top-section-layout{% endif %}">
                  {% unless topVideo == blank %}
                    <div class="top-video">
                      {{ topVideo | video_tag: image_size: 'master', autoplay: true, muted: true, controls: false, loop: true }}
                    </div>
                  {% endunless %}

                  {% unless blockTitle == blank %}
                    <h2>{{ blockTitle }}</h2>
                  {% endunless %}
                  {% unless blockDesc == blank %}
                  <div class="pdp-tab-block-desc">{{ blockDesc }}</div>
                  {% endunless %}
                  <div class="videos-columns">
                    {% for i in (1..4) %}
                      {% if product_prefix == 'flat' %}
                        {% capture flatVideoText %}flat_video{{ i }}_text{% endcapture %}
                        {% capture flatVideo %}flat_video{{ i }}_url{% endcapture %}
                      {% endif %}
                      {% if product_prefix == 'round' %}
                        {% capture flatVideoText %}round_video{{ i }}_text{% endcapture %}
                        {% capture flatVideo %}round_video{{ i }}_url{% endcapture %}
                      {% endif %}
                      {% if template_prefix == 'primary' or template_prefix == 'primary-alternate' %}
                        {% capture accessoriesType %}accessories_{{ i }}_type{% endcapture %}
                        {% capture accessoriesVideo %}accessories_video{{ i }}_url{% endcapture %}
                        {% capture accessoriesImage %}accessories_{{ i }}_image{% endcapture %}
                        {% capture accessoriesIcon %}accessories_video{{ i }}_icon{% endcapture %}
                        {% capture accessoriesHeading %}accessories_video{{ i }}_heading{% endcapture %}
                        {% capture accessoriesDesc %}accessories_video{{ i }}_text{% endcapture %}
                      {% endif %}
                      {% if block.settings[accessoriesVideo] != blank or block.settings[accessoriesImage] != blank %}
                        <div class="column accessories-column-content">
                          {% if block.settings[accessoriesType] == 'image' %}                          
                          {% unless block.settings[accessoriesImage] == blank %}<div class="accessories-column-media">{{ block.settings[accessoriesImage] | img_url: '600x' | img_tag }}</div>{% endunless %}
                          {% endif %}
                          {% if block.settings[accessoriesType] == 'video' %}                          
                          {% unless block.settings[accessoriesVideo] == blank %}<div class="accessories-column-media">{{ block.settings[accessoriesVideo] | video_tag: image_size: 'master', autoplay: true, muted: true, controls: false, loop: true }}</div> {% endunless %}
                          {% endif %}
                          {% unless block.settings[accessoriesHeading] == blank or block.settings[accessoriesDesc] == blank %}
                            <div class="column-content-area">
                              {% unless block.settings[accessoriesIcon] == blank %}<div class="column-content-icon">{{ block.settings[accessoriesIcon] | img_url: '100x' | img_tag }}</div>{% endunless %}
                              {% unless block.settings[accessoriesHeading] == blank %}<h3 class="column-content-heading">{{ block.settings[accessoriesHeading] }}</h3>{% endunless %}
                              {% unless block.settings[accessoriesDesc] == blank %}<p>{{ block.settings[accessoriesDesc] }}</p>{% endunless %}
                            </div>                           
                          {% endunless %}
                        </div>
                        {% endif %}

                      {% unless block.settings[flatVideo] == blank %}
                        <div class="column">
                          {{ block.settings[flatVideo] | video_tag: image_size: 'master', autoplay: true, muted: true, controls: false, loop: true }}
                          {% unless block.settings[flatVideoText] == blank %}
                            <p>{{ block.settings[flatVideoText] }}</p>
                          {% endunless %}
                        </div>
                      {% endunless %}
                    {% endfor %}
                  </div>
                </div>
                {% if product_prefix == 'flat' %}
                  {% assign highlType1 = block.settings.flat_highlight1_type %}
                  {% assign highlType2 = block.settings.flat_highlight2_type %}
                {% endif %}
                {% if product_prefix == 'round' %}
                  {% assign highlType1 = block.settings.round_highlight1_type %}
                  {% assign highlType2 = block.settings.round_highlight2_type %}
                {% endif %}

                {% if highlType1 != blank or highlType2 != blank %}

                  <div class="highlights" style="background:{{ block.settings.highlight_bg }};">
                    <div class="section">
                      {% for i in (1..2) %}
                        {% if product_prefix == 'flat' %}
                          {% capture highlightType %}flat_highlight{{ i }}_type{% endcapture %}
                          {% capture highlisghtTitle %}flat_highlight{{ i }}_title{% endcapture %}
                          {% capture highlightCaption %}flat_highlight{{ i }}_caption{% endcapture %}
                          {% capture highlightText %}flat_highlight{{ i }}_text{% endcapture %}
                          {% capture highlightImg %}flat_highlight{{ i }}_image{% endcapture %}
                          {% capture highlightVideo %}flat_highlight{{ i }}_video_url{% endcapture %}
                        {% endif %}
                        {% if product_prefix == 'round' %}
                          {% capture highlightType %}round_highlight{{ i }}_type{% endcapture %}
                          {% capture highlisghtTitle %}round_highlight{{ i }}_title{% endcapture %}
                          {% capture highlightCaption %}round_highlight{{ i }}_caption{% endcapture %}
                          {% capture highlightText %}round_highlight{{ i }}_text{% endcapture %}
                          {% capture highlightImg %}round_highlight{{ i }}_image{% endcapture %}
                          {% capture highlightVideo %}round_highlight{{ i }}_video_url{% endcapture %}
                        {% endif %}
                        {% if block.settings[highlightImg] == blank or block.settings[highlightVideo] == blank or block.settings[highlisghtTitle] == blank and block.settings[highlightText] == blank %}

                          <div class="columns">
                            <div class="column text">
                              {% unless block.settings[highlightCaption] == blank %}
                                <p class="caption">{{ block.settings[highlightCaption] }}</p>
                              {% endunless %}
                              {% unless block.settings[highlisghtTitle] == blank %}
                                <h3>{{ block.settings[highlisghtTitle] }}</h3>
                              {% endunless %}
                              {% unless block.settings[highlightText] == blank %}
                                <p>{{ block.settings[highlightText] }}</p>
                              {% endunless %}
                            </div>
                            <div class="column media">
                              {% if block.settings[highlightType] == 'image' %}
                                {{ block.settings[highlightImg] | img_url: '600x' | img_tag }}
                              {% endif %}
                              {% if block.settings[highlightType] == 'video' %}
                                {{ block.settings[highlightVideo] | video_tag: image_size: 'master', autoplay: true, muted: true, controls: false, loop: true }}
                              {% endif %}
                            </div>
                          </div>
                        {% endif %}
                      {% endfor %}
                    </div>
                  </div>
                {% endif %}
